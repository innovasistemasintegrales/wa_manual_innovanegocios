<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil de Publicista</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-4">
        <div class="row mb-3">
            <div class="col-sm-10">
                <h1>Perfil de Publicista</h1>
            </div>
            <div class="col-sm-2 text-end">
                <img title="Profile Image" class="img-fluid" src="images/logo.png" alt="Logo">
            </div>
        </div>
        <div class="row">
            <!-- Panel Izquierdo -->
            <div class="col-sm-3">
                <div class="text-center">
                    <img src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar rounded-circle img-thumbnail" alt="avatar">
                    <h6>Foto de Perfil</h6>
                    <input type="file" class="form-control text-center" id="profileImageUpload">
                </div>
                <br>
                <!-- Panel de Sitio Web -->
                <div class="card mb-3">
                    <div class="card-header">Sitio Web <i class="bi bi-link-45deg"></i></div>
                    <div class="card-body">
                        <a href="http://bootnipets.com" id="websiteLink">bootnipets.com</a>
                    </div>
                </div>

                <!-- Lista de Actividades -->
                <ul class="list-group mb-3">
                    <li class="list-group-item text-muted">Actividad <i class="bi bi-bar-chart-line"></i></li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><strong>Compartidos</strong></span> <span>125</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><strong>Likes</strong></span> <span>13</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><strong>Posts</strong></span> <span>37</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><strong>Followers</strong></span> <span>78</span>
                    </li>
                </ul>

                <!-- Redes Sociales -->
                <div class="card">
                    <div class="card-header">Social Media</div>
                    <div class="card-body text-center">
                        <i class="bi bi-facebook me-2"></i> 
                        <i class="bi bi-github me-2"></i> 
                        <i class="bi bi-twitter me-2"></i> 
                        <i class="bi bi-pinterest me-2"></i> 
                        <i class="bi bi-google"></i>
                    </div>
                </div>
            </div>

            <!-- Panel Principal de Contenido -->
            <div class="col-sm-9">
                <ul class="nav nav-tabs" id="profileTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab">Datos</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="messages-tab" data-bs-toggle="tab" data-bs-target="#messages" type="button" role="tab">Publicaciones</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button" role="tab">Cambio de Plan</button>
                    </li>
                </ul>
                <div class="tab-content mt-3" id="profileTabContent">
                    <!-- Tab Datos -->
                    <div class="tab-pane fade show active" id="home" role="tabpanel">
                        <form class="form" id="registrationForm">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="first_name" class="form-label"><h5>Nombre</h5></label>
                                    <input type="text" class="form-control" id="first_name" placeholder="Nombre">
                                </div>
                                <div class="col-md-6">
                                    <label for="last_name" class="form-label"><h5>Apellido</h5></label>
                                    <input type="text" class="form-control" id="last_name" placeholder="Apellido">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="phone" class="form-label"><h5>Telefono</h5></label>
                                    <input type="text" class="form-control" id="phone" placeholder="Telefono">
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label"><h5>Correo Electronico</h5></label>
                                    <input type="email" class="form-control" id="email" placeholder="you@email.com">
                                </div>
                            </div>
                            <button type="button" class="btn btn-success me-2" id="saveButton">Guardar</button>
                            <button type="reset" class="btn btn-secondary">Reiniciar</button>
                        </form>
                    </div>

                    <!-- Tab Publicaciones -->
                    <div class="tab-pane fade" id="messages" role="tabpanel">
                        <h4>Sección de Publicaciones</h4>
                        <!-- Aquí se puede agregar el contenido de las publicaciones -->
                    </div>

                    <!-- Tab Cambio de Plan -->
                    <div class="tab-pane fade" id="settings" role="tabpanel">
                        <div class="d-flex justify-content-center">
                            <!-- Plan Gratis -->
                            <div class="card m-3 shadow-lg" style="width: 18rem;">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Gratis</h5>
                                    <h6 class="card-subtitle text-success">S/0 soles/mes</h6>
                                    <a href="#" class="btn btn-outline-primary w-100 mt-3">Plan Actual</a>
                                </div>
                            </div>
                            <!-- Plan Plus -->
                            <div class="card m-3 shadow-lg" style="width: 18rem;">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Plus</h5>
                                    <h6 class="card-subtitle text-success">S/50 soles/mes</h6>
                                    <a href="#" class="btn btn-outline-success w-100 mt-3">Mejorar a Plus</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript personalizado -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const profileImageUpload = document.getElementById('profileImageUpload');
            profileImageUpload.addEventListener('change', function() {
                alert('Foto de perfil actualizada.');
            });

            document.getElementById('saveButton').addEventListener('click', function() {
                alert('Datos guardados con éxito.');
            });
        });
    </script>
</body>

</html>
